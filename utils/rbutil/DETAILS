          MODULE=rbutil
         VERSION=1.2.8-src
          SOURCE=$MODULE\_$VERSION.tar.bz2
      SOURCE_URL=http://download.rockbox.org/rbutil/source/
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE\_1.2.8
      SOURCE_VFY=sha1:5e5ba05555b095c23be81443f436582f15aa59cd
   MODULE_PREFIX=${QT4_PREFIX:-/usr}
