if  !  grep  -q  CONFIGURED  $MODULE_CONFIG;  then

  if query "Build trusting versions of tools? Allows normal users to run tools Unsecure." n ; then
    OPTS="$OPTS --trust"
  else
    OPTS="$OPTS --notrust"
  fi

  if query "Build support for CardBus cards?" y; then
    OPTS="$OPTS --cardbus"
  else
    OPTS="$OPTS --nocardbus"
  fi

  if query "Enable support for PnP BIOS? Risky for some laptops see readme." n; then
    OPTS="$OPTS --pnp"
  else
    OPTS="$OPTS --nopnp"
  fi

  if query "Enable apm suport?" y; then
    OPTS="$OPTS --apm"
  else
    OPTS="$OPTS --noapm"
  fi
  
  if query "Enable airsnort patch for orinoco cards?, UNTESTED AND MAY BE VERY BROKEN!" n; then
    echo 'AIRSNORT="y"' >> $MODULE_CONFIG
  fi

  if query "Build client modules from the pcmcia-cs? (adds extra hardware support for some devices)" n ; then
    echo 'BUILD_CLIENT="y"' >> $MODULE_CONFIG
  fi
  
  echo  'CONFIGURED="y"'  >>  $MODULE_CONFIG
  echo  'OPTS='\"$OPTS\"    >>  $MODULE_CONFIG

fi
