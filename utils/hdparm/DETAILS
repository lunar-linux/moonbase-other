          MODULE=hdparm
         VERSION=9.6
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=$SFORGE_URL/$MODULE
      SOURCE_VFY=sha1:6c95b15518392db838c041cf1b45f03db0162920
        WEB_SITE=http://www.ibiblio.org/pub/Linux/system/hardware
         ENTERED=20010922
