depends pkgconf
depends bzip2
depends xz

optional_depends pcre2 "--with-pcre2" "--without-pcre2" \
        "for Perl regular expressions support"
optional_depends brotli "--with-brotli" "--without-brotli" \
        "for brotli lossless compression support"
optional_depends lz4 "--with-lz4" "--without-lz4" \
        "for lz4 compression support"
optional_depends zlib "--with-zlib" "--without-zlib" \
        "for zlib compression support"
optional_depends zstd "--with-zstd" "--without-zstd" \
        "for zstd compression support"
