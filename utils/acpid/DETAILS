          MODULE=acpid
         VERSION=2.0.32
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$SFORGE_URL/${MODULE}2
      SOURCE_VFY=sha256:f2d2d30b3edc3234bd82f6f7186699a6aa3c85c8d20bc4e30e9b3c68a1ed157e
        WEB_SITE=http://sourceforge.net/projects/acpid2/
         ENTERED=20031102
