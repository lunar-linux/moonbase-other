                 "-DWITH_LIBPCI=ON" \
                 "-DWITH_LIBPCI=OFF" \
                 "for PCI support"

optional_depends gettext \
                 "-DWITH_GETTEXT=ON" \
                 "-DWITH_GETTEXT=OFF" \
                 "for internationalization support"

