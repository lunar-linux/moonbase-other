          MODULE=indent
         VERSION=2.2.10
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=$GNU_URL/$MODULE/
      SOURCE_VFY=sha1:20fa8a7a4af6670c3254c8b87020291c3db37ed1
        WEB_SITE=http://www.gnu.org/software/indent/
         ENTERED=20020529
         UPDATED=20101212
           SHORT="used to make code easier to read."
