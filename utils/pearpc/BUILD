(

  default_build                                                        &&

  mkdir -p /usr/share/doc/pearpc                                &&

  install -m 0644 ppccfg.example        /usr/share/doc/pearpc        &&
  install -m 0644 video.x                /usr/share/doc/pearpc        &&

  install -m 0755 scripts/ifppc_up        /usr/sbin        &&
  install -m 0755 scripts/ifppc_down        /usr/sbin

) > $C_FIFO 2>&1
