cat $SCRIPT_DIRECTORY/fonts.alias >> /usr/X11R6/lib/X11/fonts/misc/fonts.alias
cd /usr/X11R6/lib/X11/fonts/misc && mkfontdir
echo '********************************************************************'
echo '*                                                                  *'
echo '*       Please update your font path with "xset fp hash"           *'
echo '*                                                                  *'
echo '********************************************************************'
true
