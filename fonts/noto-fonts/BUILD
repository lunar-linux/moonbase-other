prepare_install &&

mkdir -p /usr/share/fonts/$MODULE &&
install -Dm644 unhinted/Noto*.tt[fc] -t /usr/share/fonts/$MODULE &&

mkdir -p /usr/share/fonts/$MODULE &&
install -Dm644 hinted/*.tt[fc] -t /usr/share/fonts/$MODULE

mkdir -p /etc/fonts/conf.{avail,conf.d} &&
install $SCRIPT_DIRECTORY/*.conf /etc/fonts/conf.avail/
