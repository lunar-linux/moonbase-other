          SOURCE=$MODULE-$VERSION.tar.gz
   SOURCE_URL[0]=$GNOME_URL/sources/$MODULE/$MAJOR/
   SOURCE_URL[1]=ftp://ftp.gnome.org/pub/GNOME/sources/$MODULE/$MAJOR/
        WEB_SITE=http://glade.gnome.org
