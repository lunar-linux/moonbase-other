 SOURCE_URL_FULL=http://github.com/jordansissel/xdotool/archive/v$VERSION.tar.gz
      SOURCE_VFY=sha256:a9837efca5ceb2c04f1bd276985d93960c5ea11eed9725c517ae3ebc3fc6dca7
