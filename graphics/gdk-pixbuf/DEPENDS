depends glib-2
depends shared-mime-info
depends tiff
depends meson

optional_depends %JPEG \
                 "-Djpeg=true" \
                 "-Djpeg=false" \
                 "for JPEG image loader" y

optional_depends libpng \
                 "-Dpng=true" \
                 "-Dpng=false" \
                 "for PNG image loader" y

optional_depends jasper \
                 "-Djasper=true" \
                 "-Djasper=false" \
                 "for JPEG 2000 image loader" y

optional_depends libX11 \
                 "-Dx11=true" \
                 "-Dx11=false" \
                 "for X11 support (needed by Adobe Acrobat Reader)" y

optional_depends libxml2 \
                 "-Dman=true" \
                 "-Dman=false" \
                 "for installing man pages" n

optional_depends gtk-doc \
                 "-Ddocs=true" \
                 "-Ddecs=false" \
                 "for building documentation" n

optional_depends gobject-introspection \
                 "-Dgir=true"  \
                 "-Dgir=false" \
                 "for gobject introspection support" y
