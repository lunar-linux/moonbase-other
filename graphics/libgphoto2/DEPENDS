depends libusb-compat

optional_depends libjpeg-turbo \
                 "" "--without-jpeg" \
                 "for jpeg graphics support"

optional_depends libgd   "--with-gdlib=auto"   "--without-gdlib"   "for graphics gd support"
optional_depends libexif "--with-libexif=auto" "--without-libexif" "for EXIF tag support"

optional_depends libxml2 \
                 "--with-libxml-2.0=auto" \
                 "--without-libxml-2.0" \
                 "for xml support"
