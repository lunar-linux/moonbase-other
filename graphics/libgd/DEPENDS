depends zlib
depends libpng
depends %JPEG
depends fontconfig

optional_depends libXpm        "--with-xpm"  "--without-xpm"  "for xorg pixmap support" y
optional_depends libwebp       "--with-webp" "--without-webp" "for webp support" y
optional_depends tiff          "--with-tiff" "--without-tiff" "for tiff graphics support" y
optional_depends libavif       "--with-avif" "--without-avif" "for avif image support" y
optional_depends libimagequant "--with-liq"  "--without-liq"  "for optimization of png graphics support" y
