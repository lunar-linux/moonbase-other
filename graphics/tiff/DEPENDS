depends zlib
depends cmake

optional_depends %JPEG    "-Djpeg=ON" "-Djpeg=OFF" "for IJG JPEG library usage (required for JPEG compression)"
optional_depends jbigkit  "-Djbig=ON" "-Djbig=OFF" "for ISO JBIG compression"
optional_depends lzma-sdk "-Dlzma=ON" "-Dlzma=OFF" "for LZMA2 compression"
optional_depends zstd     "-Dzstd=ON" "-Dzstd=OFF" "for ZSTD compression"
optional_depends libwebp  "-Dwebp=ON" "-Dwebp=OFF" "for libwebp support, ${PROBLEM_COLOR}Say NO on first install${DEFAULT_COLOR}"

optional_depends libdeflate "-Dlibdeflate=ON" "-Dlibdeflate=OFF" "for faster deflate support"

optional_depends freeglut "" "" "for mesa OpenGL support"
