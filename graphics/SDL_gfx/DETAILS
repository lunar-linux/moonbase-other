         MODULE=SDL_gfx
        VERSION=2.0.19
         SOURCE=$MODULE-$VERSION.tar.gz
     SOURCE_URL=http://www.ferzkopp.net/Software/$MODULE-2.0
     SOURCE_VFY=sha1:bba39cf83e84d8e61b8078ea095cc0a96023e27f
