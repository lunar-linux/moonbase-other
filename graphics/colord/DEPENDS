                 "-D argyllcms_sensor=true -Dlibcolordcompat=true -Dprint_profiles=true" \
                 "-D argyllcms_sensor=false -Dlibcolordcompat=false -Dprint_profiles=false" \
                 "for ArgyllCMS sensor support"

optional_depends sane-backends \
                 "-D sane=true" \
                 "-D sane=false" \
                 "for scanner support"

optional_depends polkit \
                 "-D daemon=true" \
                 "-D daemon=false" \
                 "for daemon build and install" \
                 "n"

