# optional
optional_depends gmic      "-DUSE_GMIC=ON"      "-DUSE_GMIC=OFF"      "for 3D LUT support"
optional_depends openexr   "-DUSE_OPENEXR=ON"   "-DUSE_OPENEXR=OFF"   "for EXR format support" 
optional_depends libsecret "-DUSE_LIBSECRET=ON" "-DUSE_LIBSECRET=OFF" "For storing and retrieving passwords"
optional_depends kwallet   "-DUSE_KWALLET=ON"   "-DUSE_KWALLET=OFF"   "Use kwallet password manager"
