# optional

optional_depends gmic \
  "-DUSE_GMIC=1" \
  "-DUSE_GMIC=0" \
  "for 3D LUT support"
  
optional_depends openexr \
   "-DUSE_OPENEXR=1" \
   "-DUSE_OPENEXR=0" \
   "for EXR format support" 

optional_depends flickcurl \
      "-DUSE_FLICKR=1" \
      "-DUSE_FLICKR=0" \
      "For Flickr API support" n
