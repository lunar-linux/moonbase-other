# hard requirements
depends openmp
depends python-setuptools
depends sqlite
depends libjpeg-turbo
depends libpng
depends pugixml
depends gtk+-3
depends cairo
depends librsvg
depends lcms2
depends exiv2
depends tiff
depends curl
depends gphoto2
depends dbus-glib
