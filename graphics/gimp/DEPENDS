depends gtk+-2
depends libart_lgpl
depends fontconfig
depends intltool
depends gegl-0.3
depends XML-Parser

optional_depends libmng \
                 "" "--without-libmng" \
                 "for MNG file support"

optional_depends aalib \
                 "" "--without-aa" \
                 "for ASCII art support"

optional_depends pygtk \
                 "--enable-python" \
                 "--disable-python" \
                 "for Python support"

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "for GIMP help files"

optional_depends librsvg \
                 "--with-librsvg" \
                 "--without-librsvg" \
                 "for SVG support"

optional_depends gvfs \
                 "" "--without-gvfs" \
                 "for remote file support"

optional_depends webkitgtk3 \
                 "" "--without-webkit" \
                 "for help browser support"

optional_depends poppler \
                 "" "--without-poppler" \
                 "for pdf support"

optional_depends libgudev \
                 "--with-gudev" \
                 "--without-gudev" \
                 "for UDEV glib support"

optional_depends ghostscript \
                 "--with-gs" \
                 "--without-gs" \
                 "for Ghostscript support"
