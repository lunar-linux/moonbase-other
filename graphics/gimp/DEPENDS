depends  gtk+-2
depends  libart_lgpl
depends  fontconfig
depends  intltool
depends  gegl

optional_depends  "libmng"                  \
                  ""                        \
                  "--without-libmng"        \
                  "for MNG file support"

optional_depends  "aalib"                   \
                  ""                        \
                  "--without-aa"            \
                  "for ASCII art support"

optional_depends  "pygtk"                  \
                  "--enable-python"         \
                  "--disable-python"        \
                  "for Python support"

optional_depends  "gtk-doc"                 \
                  "--enable-gtk-doc"        \
                  ""                        \
                  "for GIMP help files"

optional_depends  "librsvg"                 \
                  "--with-librsvg"          \
                  "--without-librsvg"       \
                  "for SVG support"

optional_depends  "gnome-desktop"           \
                  "--enable-gnome-desktop"  \
                  ""                        \
                  "for Gnome2 support"

optional_depends  "gvfs"                    \
                  ""                        \
                  "--without-gvfs"          \
                  "for remote file support"

optional_depends  "WebKit"                  \
                  ""                        \
                  "--without-webkit"        \
                  "for help browser support"

optional_depends  "poppler"                 \
                  ""                        \
                  "--without-poppler"       \
                  "for pdf support"
