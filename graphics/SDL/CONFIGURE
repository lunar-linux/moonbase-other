mquery PTHREAD "Use POSIX threads for multi-threading?"           \
               y                                                  \
               "--enable-pthreads"                                \
               "--disable-pthreads"

mquery FBCON   "Enable framebuffer console (fbcon) video driver?" \
               y                                                  \
               "--enable-video-fbcon"                             \
               "--disable-video-fbcon"
