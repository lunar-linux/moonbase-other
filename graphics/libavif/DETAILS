          MODULE=libavif
         VERSION=1.0.3
          SOURCE=$MODULE-$VERSION.tar.gz
 SOURCE_URL_FULL=https://github.com/AOMediaCodec/libavif/archive/refs/tags/v$VERSION.tar.gz
