          MODULE=json-glib
         VERSION=1.4.4
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=http://ftp.gnome.org/pub/GNOME/sources/$MODULE/${VERSION%.*}
      SOURCE_VFY=sha256:720c5f4379513dc11fd97dc75336eb0c0d3338c53128044d9fabec4374f4bc47
