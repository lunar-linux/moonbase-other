OPTS+=" -DBUILD_SHARED_LIBS=ON -DCMAKE_INSTALL_BINDIR=bin/$MODULE \
        -DCMAKE_INSTALL_DATAROOTDIR=share/$MODULE \
        -DCMAKE_INSTALL_INCLUDEDIR=include/$MODULE \
        -DCMAKE_INSTALL_LIBEXECDIR=libexec/$MODULE \
        -DCMAKE_INSTALL_LOCALSTATEDIR=var/$MODULE \
        -DCMAKE_INSTALL_SBINDIR=sbin/$MODULE \
        -DCMAKE_INSTALL_SYSCONFDIR=etc/$MODULE" &&

default_cmake_build
