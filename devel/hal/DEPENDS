depends udev
depends XML-Parser
depends dbus-glib
depends expat

optional_depends "dmidecode"  ""                 ""               "for DMI (SMBIOS) support"
optional_depends "libusb"     ""                 "--disable-usb"  "for USB support"
optional_depends "parted"     "--enable-parted"  ""               "for parted support"

optional_depends "gtk-doc"           \
                 "--enable-gtk-doc"  \
                 "--disable-gtk-doc" \
                 "to install extra documentation"

optional_depends "PolicyKit"            \
                 "--enable-policy-kit"  \
                 "--disable-policy-kit" \
                 "to enable PolicyKit inside HAL (also pulls in Linux-PAM!)"

optional_depends "ConsoleKit"            \
                 "--enable-console-kit"  \
                 "--disable-console-kit" \
                 "to enable ConsoleKit support inside HAL"
