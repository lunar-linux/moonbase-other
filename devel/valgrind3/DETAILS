          MODULE=valgrind3
         VERSION=3.4.0
          SOURCE=valgrind-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/valgrind-$VERSION
      SOURCE_URL=http://valgrind.org/downloads
