          MODULE=desktop-file-utils
         VERSION=0.12
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://www.freedesktop.org/software/$MODULE/releases/
      SOURCE_VFY=sha1:79baee7f390665fcaa2a663aa1e48ce6f7fb9a8e
