        MODULE=swig
       VERSION=2.0.0
        SOURCE=$MODULE-$VERSION.tar.gz
    SOURCE_URL=$SFORGE_URL/$MODULE/$MODULE/$MODULE-$VERSION
    SOURCE_VFY=sha1:60faa84a326e5aa8a94f290e9debed4551c1b1e7
      WEB_SITE=http://www.swig.org
