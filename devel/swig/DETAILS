    SOURCE_URL=$SFORGE_URL/$MODULE/$MODULE/$MODULE-$VERSION
    SOURCE_VFY=sha1:763305da320163903c69c1cdfbf9a942117d9ace
      WEB_SITE=http://www.swig.org
