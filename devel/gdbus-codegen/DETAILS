          MODULE=gdbus-codegen
         VERSION=2.73.3
          SOURCE=glib-$VERSION.tar.xz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/glib-${VERSION}
      SOURCE_URL=$GNOME_URL/sources/glib/${VERSION%.*}
