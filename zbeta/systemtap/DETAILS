      SOURCE_URL=ftp://sources.redhat.com/pub/systemtap/snapshots/
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
      SOURCE_VFY=sha1:d62e2110f4f72f3c3d7a905016543a848cba3154
