if ! [ -d  /usr/lib/pkgconfig ]; then
  mkdir -p /usr/lib/pkgconfig
fi

if ! grep -q /usr/X11R7/lib /etc/ld.so.conf ; then
  echo "/usr/X11R7/lib" >> /etc/ld.so.conf
  ldconfig
fi

if [ -h /usr/X11 -a $(readlink -f /usr/X11) == ${X11R7_PREFIX:-/usr/X11R7} ]; then
  ln -s /usr/X11 ${X11R7_PREFIX:-/usr/X11R7}
fi

if [ -h /usr/include/X11 -a $(readlink -f /usr/include/X11) == ${X11R7_PREFIX:-/usr/X11R7}/include/X11} ]; then
  ln -s /usr/include/X11 ${X11R7_PREFIX:-/usr/X11R7/}include/X11
fi

