                  "for gnome-vfs2 support" &&

optional_depends  "libvisual"  ""  "--disable-libvisual"  \
                  "for audio visualisations"  &&

optional_depends  "libtheora"  ""  "--disable-theora"  \
                  "for Ogg Theora video support"

