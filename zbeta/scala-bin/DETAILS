          MODULE=scala-bin
             MOD=scala
         VERSION=2.9.0
             VER=$VERSION.final
          SOURCE=$MOD-$VER.tgz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MOD-$VER
      SOURCE_URL=http://www.scala-lang.org/downloads/distrib/files/
