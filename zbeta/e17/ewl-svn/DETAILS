          MODULE=ewl-svn
         VERSION=svn-`date +%Y%U`
          SOURCE=$MODULE.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE
      SOURCE_URL=svn+http://svn.enlightenment.org/svn/e/trunk/ewl
        WEB_SITE=http://www.enlightenment.org/pages/ewl.html
         ENTERED=20041010
         UPDATED=20081102
   MODULE_PREFIX=${E17_PREFIX:-/opt/lunar/enlightenment}
           SHORT="An Evas based general purpose widget library"

cat << EOF
The EWL (Enlightened Widget Library) is a toolkit for creating graphical
user interfaces based on the Enlightenment Foundataion Libraries (EFL).
The library aims to ease the pain of creating graphical interfaces
through the simplicity and consistency of its APIs.
EOF
