depends  pkgconfig  &&
depends  eet-cvs    &&

optional_depends  "edb-cvs"   "--enable-image-loader-edb"   ""         \
                              "enable the EFL-based edb image loader"  &&
optional_depends  "libpng"    "--enable-image-loader-png"   ""         \
                              "enable PNG image loader"                &&
optional_depends  "jpeg"      "--enable-image-loader-jpeg"  ""         \
                              "enable JPEG image loader"               &&
optional_depends  "libungif"  "--enable-image-loader-gif"   ""         \
                              "enable GIF image loader"                &&
optional_depends  "tiff"      "--enable-image-loader-tiff"  ""         \
                              "enable TIFF image loader"               &&
optional_depends  "DirectFB"  "--enable-directfb"           ""         \
                              "enable the DirectFB rendering backend"  &&
optional_depends  "librsvg"   "--enable-image-loader-svg"   ""         \
                              "enabled the SVG image loader"
