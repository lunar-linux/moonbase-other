add_priv_user qemu:qemu -G kvm &&

OPTS+=" --disable-static \
        --without-wireshark-dissector \
        --without-xen \
        --without-hal \
        --without-netcf \
        --with-udev \
        --with-network \
        --with-secrets \
        --with-libvirtd \
        --with-interface \
        --with-init-script=none"

if module_installed systemd; then
  OPTS+=" --with-init-script=systemd"
fi

autoreconf &&

default_build
