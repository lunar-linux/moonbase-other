         MODULE=sswf
        VERSION=1.8.4
           TYPE=src
         SOURCE=${MODULE}-${VERSION}-${TYPE}.tar.bz2
     SOURCE_URL=$SFORGE_URL/$MODULE/$MODULE/$VERSION/
     SOURCE_VFY=sha1:24e8b7b91e94debf71f3bf1001e0be0e47f59515
       WEB_SITE=http://www.m2osw.com/sswf.html
        ENTERED=20101123
