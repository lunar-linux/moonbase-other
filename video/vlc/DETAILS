         SOURCE2=$MODULE-$VERSION-ffmpeg-headers.patch
         SOURCE3=$MODULE-$VERSION-ffmpeg-includepaths.patch
      SOURCE_URL=http://www.videolan.org/pub/videolan/$MODULE/$VERSION
     SOURCE2_URL=$PATCH_URL/
     SOURCE3_URL=$PATCH_URL/
