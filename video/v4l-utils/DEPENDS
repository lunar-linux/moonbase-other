depends alsa-lib

optional_depends %JPEG \
                 "--with-jpeg" \
                 "--without-jpeg" \
                 "for JPEG support"

optional_depends qt5 \
                 "--enable-qv4l2" \
                 "--disable-qv4l2" \
                 "for Qt5 support"

optional_depends %UDEV \
                 "--with-udevdir=/usr/lib/udev" \
                 "--without-udevdir" \
                 "for udev device name support"