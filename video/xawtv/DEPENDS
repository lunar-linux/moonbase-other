depends  %JPEG

optional_depends  "libpng"       ""                ""    \
                  "capture screen images to png format"

optional_depends  "alsa-utils"   "--enable-alsa"   "--disable-alsa" "for ALSA audio support"

optional_depends  "xawtv-fonts"  ""                ""    \
                  "for extra tv fonts"

optional_depends  "libquicktime" "--enable-quicktime"   \
                                 "--disable-quicktime"  \
                                 "for quicktime support"

optional_depends  "openMotif"    "--enable-motif"  "--disable-motif" "for motif support"
optional_depends  "zvbi"         "--enable-zvbi"   "--disable-zvbi"  "for teletext support"
optional_depends  "aalib"        "--enable-aa"     "--disable-aa"    "for ascii GFX support"
optional_depends  "libdv"        "--enable-dv"     "--disable-dv"    "for dv support"
