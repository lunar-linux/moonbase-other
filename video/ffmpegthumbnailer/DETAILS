          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://ffmpegthumbnailer.googlecode.com/files/
      SOURCE_VFY=sha1:71024afb50e26217dc5de59a34f299551cb6816a
        WEB_SITE=http://code.google.com/p/ffmpegthumbnailer/
         ENTERED=20100105
