          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://ffmpegthumbnailer.googlecode.com/files/
      SOURCE_VFY=sha1:ce1e55d9a207ec4eacc963e054ac5a08b9e051df
