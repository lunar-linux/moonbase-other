depends faac &&
depends id3lib &&

optional_depends  "lame"                \
                  "--enable-mp3lame"	\
                  "--disable-mp3lame"	\
                  "for MP3 en/decoding support" &&

optional_depends  "xvidcore"            \
                  "--enable-xvid"    \
                  "--disable-xvid"   \
                  "for XviD decoding support"	&&

optional_depends  "libmad"               \
                  "--enable-mad"    \
                  "--disable-mad"   \
                  "for MAD en/decoding support"
