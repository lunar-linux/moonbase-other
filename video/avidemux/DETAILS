          MODULE=avidemux
         VERSION=2.7.4
          SOURCE=$MODULE\_$VERSION.tar.gz
      SOURCE_URL=$SFORGE_URL/$MODULE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE\_$VERSION
      SOURCE_VFY=sha256:7db0ac01c8255279a2c360ecb2725c27ea8a2c5bd1f38aeafabfed33ea588da9
