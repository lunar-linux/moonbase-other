optional_depends "sqlite"     "--with-sqlite3"  "--without-sqlite3"  "for sqlite support" y
optional_depends "%MYSQL"     "--with-mysql"    "--without-mysql"    "for mysql support" n
optional_depends "postgresql" "--with-pgsql"    "--without-pgsql"    "for postgresql support" n
