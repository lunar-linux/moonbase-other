          MODULE=clamav
         VERSION=0.95.2
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=$SFORGE_URL/$MODULE
      SOURCE_VFY=sha1:7544b39d84f2233b984a9c2ce3ef74d407add483
        WEB_SITE=http://www.clamav.net
