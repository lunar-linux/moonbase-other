         VERSION=264
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://www.padl.com/download/
      SOURCE_VFY=sha1:b06a8ac04bf1cf6a4aaeef8ae6dbb3fad097a668
