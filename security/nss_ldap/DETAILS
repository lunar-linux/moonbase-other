          MODULE=nss_ldap
         VERSION=253
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://www.padl.com/download/
      SOURCE_VFY=sha1:fb08e794233d4524bcd784fe6d845b0b236a72a2
