          MODULE=nss_ldap
         VERSION=262
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://www.padl.com/download/
      SOURCE_VFY=sha1:846419cc10fbcccc173744176bdd88f9607e7f28
        WEB_SITE=http://www.padl.com/OSS/nss_ldap.html
         ENTERED=20040507
