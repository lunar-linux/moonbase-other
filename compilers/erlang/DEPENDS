depends perl
depends m4
depends sed
depends lksctp-tools

optional_depends ncurses \
                 "--with-termcap" \
                 "--without-termcap" \
                 "for ncurses support" \
                 "y"

optional_depends zlib \
                 "--enable-shared-zlib" \
                 "--enable-builtin-zlib" \
                 "for zlib support" \
                 "y"

optional_depends %OSSL \
                 "--with-ssl --enable-ssl=dynamic-ssl-lib --with-ssl-rpath=/usr/lib" \
                 "--without-ssl" \
                 "for ssl support"

optional_depends %JAVA_SDK \
                 "--with-javac" \
                 "--without-javac" \
                 "for java support"

optional_depends unixODBC \
                "--enable-odbc" \
                "--disable-odbc"  "for ODBC support" \
                "n"

optional_depends glu   "" "" "for GL support" "n"
optional_depends wxGTK "" "" "for WxGTK support" "n"
