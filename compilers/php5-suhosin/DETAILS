          MODULE=php5-suhosin
     PHP_VERSION=5.2.3
     SUHOSIN_VER=0.9.20
    SUHOSIN_PVER=0.9.6.2
         VERSION=$PHP_VERSION-$SUHOSIN_VER
SOURCE_DIRECTORY=$BUILD_DIRECTORY/php-$PHP_VERSION
          SOURCE=php-$PHP_VERSION.tar.bz2
   SOURCE_URL[0]=http://www.php.net/distributions/
