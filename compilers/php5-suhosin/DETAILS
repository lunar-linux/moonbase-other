     SOURCE2_URL=http://www.hardened-php.net/suhosin/_media/
     SOURCE3_URL=http://www.hardened-php.net/suhosin/_media/
      SOURCE_VFY=sha1:0a02e05e1c663c0d4ee0b253917c0e140e606261
