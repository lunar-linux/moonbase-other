         SOURCE2=bash-4.2-patches-1-8.patch.bz2
   SOURCE_URL[0]=$GNU_URL/$MODULE
   SOURCE_URL[1]=ftp://ftp.gnu.org/pub/gnu/bash
   SOURCE_URL[2]=ftp://ftp.cwru.edu/pub/bash
     SOURCE2_URL=$PATCH_URL
