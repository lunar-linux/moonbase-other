           MAJOR=2.6
          SOURCE=$MOD-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MOD-$VERSION
      SOURCE_URL=$GNOME_URL/sources/$MOD/$MAJOR/
      SOURCE_VFY=sha1:5d6bd9a194676173c3efb76538d54d89bbeaf5fa
        WEB_SITE=http://www.gnome.org/
