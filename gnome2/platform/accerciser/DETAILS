        MODULE=accerciser
       VERSION=1.8.0
         MAJOR=1.8
        SOURCE=$MODULE-$VERSION.tar.bz2
    SOURCE_URL=$GNOME_URL/sources/$MODULE/$MAJOR/
    SOURCE_VFY=sha1:1fe0b7b6456f658a40087e542bec1976b81b2505
      WEB_SITE=http://live.gnome.org/Accerciser
       ENTERED=20100228
