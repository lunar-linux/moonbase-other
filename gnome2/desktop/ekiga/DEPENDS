depends opal
depends gnome-doc-utils
depends libsigc++2
depends boost
optional_depends dbus  "" "--disable-dbus"  "for dbus support"
optional_depends avahi "" "--disable-avahi" "for avahi support"

optional_depends evolution-data-server \
                 ""                    \
                 "--disable-eds"       \
                 "to enable evolution-data-server support"

optional_depends libgnomeui \
                 ""         \
                 "--disable-gnome --disable-doc" \
                 "to enable gnome support"

optional_depends openldap  \
                 ""        \
                 "--disable-ldap"  \
                 "for OpenLDAP support"
