(

   ./configure  --prefix=${GNOME210_PREFIX:-/usr}  \
                --build=$BUILD                    \
                --sysconfdir=/etc                 \
                --localstatedir=/var              \
                --infodir=${GNOME210_PREFIX:-/usr}/share/info \
                --mandir=${GNOME210_PREFIX:-/usr}/share/man   \
		--disable-lirc --disable-mozilla  \
		--disable-nvtv --disable-vanity   \
                $OPTS                             &&
    default_make                   

) > $C_FIFO 2>&1
