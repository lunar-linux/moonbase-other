depends  popt
depends  openssh

optional_depends "acl"                                   \
                 "--enable-acl-support"                  \
                 "--disable-acl-support"                 \
                 "for access control list (acl) support"

optional_depends "attr"                                  \
                 "--enable-xattr-support"                \
                 "--disable-xattr-support"               \
                 "for extended attribute (attr) support"
