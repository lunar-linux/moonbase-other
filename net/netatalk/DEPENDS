depends db
depends libevent
depends libgcrypt

optional_depends "avahi" \
                 "--enable-zeroconf" \
                 "--disable-zeroconf" \
                 "for zeroconf support"

optional_depends "Linux-PAM" \
                 "--with-pam" \
                 "--without-pam" \
                 "for PAM support"

optional_depends "cracklib" \
                 "--with-cracklib=/usr/share/cracklib" \
                 "--without-cracklib" \
                 "for cracklib support"
