         MODULE=ether-wake
        VERSION=1.09
         SOURCE=${MODULE}.c
     SOURCE_URL=ftp://ftp.scyld.com/pub/diag/
     SOURCE_VFY=sha1:85e87893722e6be3cc3b4980fd219d5e2621e895
       WEB_SITE=http://www.scyld.com/wakeonlan.html
        ENTERED=20051110
