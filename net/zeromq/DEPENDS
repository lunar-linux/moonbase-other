depends util-linux

optional_depends libpgm \
                 "--with-pgm" \
                 "--without-pgm" \
                 "for Pragmatic General Multicast (PGM) protocol support"

optional_depends libsodium \
                 "--with-libsodium" \
                 "--without-libsodium" \
                 "for NACL based crypto support"
