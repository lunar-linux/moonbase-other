          MODULE=oidentd
         VERSION=2.0.7
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${MODULE}-${VERSION}
      SOURCE_URL=$SFORGE_URL/ojnk/
      SOURCE_VFY=sha1:c973b436e6f8cab87b5e2f557e901722e27f1e79
        WEB_SITE=http://dev.ojnk.net/
         ENTERED=20011218
         UPDATED=20040408
