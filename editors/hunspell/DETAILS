          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=$SFORGE_URL/$MODULE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
      SOURCE_VFY=sha1:665f1d560c2b6dccbf90d1ffa72d54fb87407290
        WEB_SITE=http://hunspell.sourceforge.net
         ENTERED=20071017
