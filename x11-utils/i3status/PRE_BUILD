default_pre_build &&

# build i3status without pulseaudio
sedit '/ifeq ($(OS),OpenBSD)/d' Makefile &&
sedit '60 i ifeq ($(OS),OpenBSD)\nLIBS+=-lpthread\nendif\n' Makefile &&
sedit '85 i PULSE ?= 1\n ifeq ($(PULSE),0)' Makefile &&
sedit 's/LIBS=$(filter-out -lpulse, $(LIBS))/a\nelse\nCPPFLAGS+=-DPULSE/' Makefile &&
sedit 's|#ifndef __OpenBSD__|#if (!defined(__OpenBSD__) && defined(PULSE))|' src/print_volume.c
