          MODULE=gtorrentviewer
         VERSION=0.2b
          SOURCE=GTorrentViewer-${VERSION}.tar.gz
   SOURCE_URL[0]=$SFORGE_URL/$MODULE/
SOURCE_DIRECTORY=$BUILD_DIRECTORY/GTorrentViewer-${VERSION}
        WEB_SITE=http://gtorrentviewer.sourceforge.net/
         ENTERED=20050109
         UPDATED=20050109
           SHORT="A viewer and editor for Bittorrent meta files"
cat << EOF
GTorrentViewer is a GTK2-based viewer and editor for
BitTorrent meta files. It is able to retrieve information
from trackers, check files, show detailed information,
and modify .torrent files without having to start downloading.
EOF
