          MODULE=mkfontscale
         VERSION=1.0.3
          SOURCE=$MODULE-$VERSION.tar.bz2
      SOURCE_URL=$XORG_URL/individual/app/
      SOURCE_VFY=sha1:f635e66e8fc214a52c29c7fcb459fb65ba4ce1e4
