          SOURCE=$MODULE-$VERSION.tar.bz2
      SOURCE_URL=$XORG_URL/X11R7.2/src/everything/
      SOURCE_VFY=sha1:361c638794da5afc3a6762705b48fbb5245e9ced
   MODULE_PREFIX=${X11R7_PREFIX:-/usr}
        WEB_SITE=http://www.x.org/
