depends autoconf
depends automake
depends pkgconfig
depends libtool

optional_depends "libvorbis"  \
   "--enable-libvorbis"       \
   "--disable-libvorbis"      \
   "to enable Vorbis support"

optional_depends "ImageMagick"  \
   "--enable-imagemagick"       \
   "--disable-imagemagick"      \
   "to enable ImageMagick support"

optional_depends "gdbm"  \
   "--enable-libdb"      \
   "--disable-libdb"     \
   "to enable supernode support"
