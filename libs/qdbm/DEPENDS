optional_depends zlib  "--enable-zlib" "--disable-zlib" "for feature ZLIB for B+ tree and inverted index"
optional_depends lzo   "--enable-lzo"  "--disable-lzo"  "for feature LZO for B+ tree and inverted index"
optional_depends bzip2 "--enable-bzip" "--disable-bzip" "for feature BZIP2 for B+ tree and inverted index"

