          MODULE=libchipcard2
         VERSION=2.1.8
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=$SFORGE_URL/libchipcard/
      SOURCE_VFY=sha1:9074f85d8a31976a0fa85066432c595bbd03ec09
        WEB_SITE=http://www.libchipcard.de/
