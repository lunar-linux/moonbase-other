          MODULE=libtool
            BASE=2.4
         VERSION=${BASE}.2
          SOURCE=$MODULE-$VERSION.tar.gz
   SOURCE_URL[0]=$GNU_URL/$MODULE
   SOURCE_URL[1]=ftp://ftp.gnu.org/pub/gnu/$MODULE
      SOURCE_VFY=sha1:22b71a8b5ce3ad86e1094e7285981cae10e6ff88
