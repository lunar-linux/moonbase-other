          MODULE=libraw1394
         VERSION=1.2.0
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://www.linux1394.org/dl/
      SOURCE_VFY=sha1:d99ba3812b4e0b5648de4215333667f0be3701d7
        WEB_SITE=http://www.linux1394.org
         ENTERED=20030909
