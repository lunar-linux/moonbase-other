         VERSION=1.3.0
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://www.linux1394.org/dl/
      SOURCE_VFY=sha1:30e8e4a4a1ebec5fe6462639bc3fdb75a9000b05
        WEB_SITE=http://www.linux1394.org
         ENTERED=20030909
