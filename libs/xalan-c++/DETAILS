           MODULE=xalan-c++
          VERSION=1.10.0
           SOURCE=Xalan-C_1_10_0-src.tar.gz
 SOURCE_DIRECTORY=$BUILD_DIRECTORY/xml-xalan/
       SOURCE_URL=http://netmirror.org/mirror/apache.org/xml/xalan-c/
         WEB_SITE=http://xml.apache.org/xalan-c/
          ENTERED=20071004
