default_pre_build &&

sed -i "s/sbin\.Right(1) == '\\\\0')/strlen(sbin\.Right(1)) == 0)/" src/ptclib/podbc.cxx &&
    
sed -i '/\/ioctl.h/a#include <sys/uio.h>' src/ptlib/unix/channel.cxx &&

if module_installed ffmpeg ; then
  OPTS+=" --enable-ffvdev"
 else
  OPTS+=" --disable-ffvdev"
fi &&

OPTS+=" --disable-odbc --disable-openssl"
