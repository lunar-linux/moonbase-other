(
   bad_flags ALL &&
   ./configure  --build=$BUILD             \
                --prefix=/usr              \
                --bindir=/bin              \
                --sbindir=/sbin            \
                --datadir=/usr/share       \
                --localstatedir=/var       \
                --libdir=/lib              \
                --includedir=/usr/include  \
                --infodir=/usr/share/info  \
                --mandir=/usr/share/man    \
                --enable-utf8             &&
   default_make &&
   cp -a /lib/pkgconfig/libpcre.pc /usr/lib/pkgconfig

) > $C_FIFO 2>&1
