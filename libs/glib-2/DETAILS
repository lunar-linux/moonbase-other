          MODULE=glib-2
         VERSION=10.2
          SOURCE=$MODULE.$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE.$VERSION
      SOURCE_URL=ftp://ftp.gtk.org/pub/gtk/v2.10/
      SOURCE_VFY=sha1:14d055725a4fa347bc4c11d6f52ec5268da2454f
        WEB_SITE=http://www.gtk.org
         ENTERED=20020313
