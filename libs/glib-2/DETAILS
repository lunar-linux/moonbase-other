      SOURCE_URL=ftp://ftp.gtk.org/pub/gtk/v2.10/
      SOURCE_VFY=sha1:b68592f0e7d461cebf7cd62dc1b2c8449760fe65
        WEB_SITE=http://www.gtk.org
