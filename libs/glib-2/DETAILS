          MODULE=glib-2
         VERSION=8.2
          SOURCE=$MODULE.$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE.$VERSION
      SOURCE_URL=ftp://ftp.gtk.org/pub/gtk/v2.8/
      SOURCE_VFY=sha1:26760dd7e90f72a8a738bcb03ee2d364959e4369
        WEB_SITE=http://www.gtk.org
         ENTERED=20020313
