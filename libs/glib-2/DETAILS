          MODULE=glib-2
         VERSION=0.6
          SOURCE=$MODULE.$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE.$VERSION
   SOURCE_URL[0]=ftp://ftp.gtk.org/pub/gtk/v2.0/$SOURCE
        WEB_SITE=http://www.gtk.org
      MAINTAINER=scarecrow.143@attbi.com
