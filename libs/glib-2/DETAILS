      SOURCE_URL=ftp://ftp.gtk.org/pub/gtk/v2.8/
      SOURCE_VFY=sha1:bfd9942f049be7cd66452ae8a310cb44cb72f5ac
        WEB_SITE=http://www.gtk.org
         ENTERED=20020313
