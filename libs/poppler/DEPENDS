                  ""             \
                  ""             \
                  "for support of additional file encodings"

optional_depends  "qt4"                    \
                   ""                      \
                   "--disable-poppler-qt4" \
                   "for Qt4 wrapper support"

optional_depends  "gtk+-2" \
                  ""       \
                  ""       \
                  "for GTK wrapper support"

