depends cmake
depends boost
depends fontconfig

optional_depends poppler-data "" "" "for support of additional file encodings"

optional_depends openjpeg-2 \
                 "-DENABLE_LIBOPENJPEG=openjpeg2" \
                 "-DENABLE_LIBOPENJPEG=none" \
                 "for using system's libopenjpeg for JPX streams"

optional_depends %JPEG \
                 "-DENABLE_DCTDECODER=libjpeg" \
                 "-DENABLE_DCTDECODER=none" \
                 "for using system's jpeg library for DCT streams"

optional_depends curl \
                 "-DENABLE_LIBCURL=ON" \
                 "-DENABLE_LIBCURL=OFF" \
                 "for curl based HTTP support"

optional_depends zlib \
                 "-DENABLE_ZLIB=ON -DENABLE_ZLIB_UNCOMPRESS=ON" \
                 "-DENABLE_ZLIB=OFF" \
                 "for zlib compression support (not totally safe)"

optional_depends libpng \
                 "-DENABLE_LIBPNG=ON" \
                 "-DENABLE_LIBPNG=OFF" \
                 "for PNG image support"

optional_depends tiff \
                 "-DENABLE_LIBTIFF=ON" \
                 "-DENABLE_LIBTIFF=OFF" \
                 "for TIFF image support"

optional_depends lcms2 \
                 "-DENABLE_CMS=lcms2" \
                 "-DENABLE_CMS=none" \
                 "for the color management system (needed by cups_filters)"

optional_depends cairo \
                 "-DENABLE_GLIB=ON" \
                 "-DENABLE_GLIB=OFF" \
                 "for the cairo graphics backend"

optional_depends qt5 \
                 "-DENABLE_QT5=ON" \
                 "-DENABLE_QT5=OFF" \
                 "for Qt5 wrapper support"

optional_depends gobject-introspection "" "" "for introspection support"
