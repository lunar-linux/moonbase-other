mquery SPLASH     "Use single presision for Splash backend?" y "-DUSE_FLOAT=ON" "-DUSE_FLOAT=OFF"

mquery CPPWRAPPER "Build poppler cpp wrapper? (cups-filters needs it)" y \
                  "-DENABLE_CPP=ON" \
                  "-DENABLE_CPP=OFF"

mquery UTILS      "Build command line utils?" y \
                  "-DENABLE_UTILS=ON" \
                  "-DENABLE_UTILS=OFF"

mquery CMYK       "Enable CMYK rasterization?" y \
                  "-DSPLASH_CMYK=ON" \
                  "-DSPLASH_CMYK=OFF"
