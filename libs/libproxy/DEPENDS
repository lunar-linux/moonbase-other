depends cmake

optional_depends  "kde-baseapps"      \
                  "-DWITH_KDE4=ON"    \
                  "-DWITH_KDE=OFF"    \
                  "for KDE bindings. Circular dependency, compile without first."

optional_depends  "%GECKO_RENDERER"   \
                  "-DWITH_MOZJS=ON"   \
                  "-DWITH_MOZJS=OFF"  \
                  "for Mozilla javascript bindings"

optional_depends  "Python"            \
                  "-DWITH_PYTHON=ON"  \
                  "-DWITH_PYTHON=OFF" \
                  "for the Python bindings"

optional_depends  "perl"              \
                  "-DWITH_PERL=ON"    \
                  "-DWITH_PERL=OFF"   \
                  "for Perl bindings"

optional_depends  "vala"              \
                  "-DWITH_VALA=ON"    \
                  "-DWITH_VALA=OFF"   \
                  "for vala bindings"

optional_depends  "webkit"            \
                  "-DWITH_WEBKIT=ON"  \
                  "-DWITH_WEBKIT=OFF" \
                  "webkit (circular dependency - compile without webkit first)"

optional_depends  "GConf"             \
                  "-DWITH_GNOME=ON"   \
                  "-DWITH_GNOME=OFF"  \
                  "for Gnome/GConf bindings"

optional_depends  "mono"              \
                  "-DWITH_DOTNET=ON"  \
                  "-DWITH_DOTNET=off" \
                  "for dot net support"
