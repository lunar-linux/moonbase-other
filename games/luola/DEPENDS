depends  SDL_image  &&

optional_depends  SDL_ttf                \
                  ""                     \
                  "--disable-truetype"   \
                  "for TrueType fonts"  &&

optional_depends  SDL_mixer              \
                  "--enable-sound"       \
                  "--disable-sound"      \
                  "for sound support"   &&

optional_depends  SDL_gfx                \
                  "--enable-sdl-gfx"     \
                  "--disable-sdl-gfx"    \
                  "for better graphics"
