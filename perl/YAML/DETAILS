          MODULE=YAML
         VERSION=0.77
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
      SOURCE_URL=http://search.cpan.org/CPAN/authors/id/I/IN/INGY/
      SOURCE_VFY=sha1:9f9e68e9d1b447d280903b1bcc038e38717869a4
