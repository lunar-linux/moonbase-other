          MODULE=YAML
         VERSION=0.62
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
      SOURCE_URL=http://search.cpan.org/CPAN/authors/id/I/IN/INGY/
