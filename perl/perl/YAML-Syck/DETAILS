          MODULE=YAML-Syck
         VERSION=1.17
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
      SOURCE_URL=http://search.cpan.org/CPAN/authors/id/A/AV/AVAR/
      SOURCE_VFY=sha1:b847748db9f65d432c2e2792c9bd6fdf22e7eaa6
