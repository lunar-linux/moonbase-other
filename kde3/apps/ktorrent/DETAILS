          MODULE=ktorrent
         VERSION=2.0.3
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://ktorrent.pwsp.net/downloads/$VERSION/
      SOURCE_VFY=sha1:75d63e1e8f8cc5449d6f0e0b096c0425b1b807cf
   MODULE_PREFIX=${KDE_PREFIX:-/opt/lunar/kde/3}
        WEB_SITE=http://ktorrent.pwsp.net/
         ENTERED=20050907
         UPDATED=20061010
           SHORT="BitTorrent program for KDE"

cat << EOF
KTorrent is a BitTorrent program for KDE. It's main features are:
  - Downloads torrent files
  - Upload speed capping, seeing that most people can't upload infinite
    amounts of data.
  - Internet searching using The Bittorrent website's search engine
  - UDP Trackers
EOF
