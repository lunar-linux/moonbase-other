          MODULE=kdewebdev3
         VERSION=3.5.4
          SOURCE=kdewebdev-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/kdewebdev-$VERSION
      SOURCE_URL=$KDE_URL/stable/$VERSION/src/
      SOURCE_VFY=sha1:194ca0128d59bcb6bd042039f6bc7c5ef47f28d3
        WEB_SITE=http://www.kde.org/
         ENTERED=20020523
