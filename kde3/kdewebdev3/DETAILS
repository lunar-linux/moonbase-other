          MODULE=kdewebdev3
         VERSION=3.4.3
          SOURCE=kdewebdev-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/kdewebdev-$VERSION
      SOURCE_URL=$KDE_URL/stable/$VERSION/src/
      SOURCE_VFY=sha1:fb9e88873f2662b08b4fa4efc75db377b7a26b47
        WEB_SITE=http://www.kde.org/
         ENTERED=20020523
         UPDATED=20051013
      MAINTAINER=florin@lunar-linux.org
