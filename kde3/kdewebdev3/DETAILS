          MODULE=kdewebdev3
         VERSION=3.4.0
          SOURCE=kdewebdev-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/kdewebdev-$VERSION
      SOURCE_URL=$KDE_URL/stable/3.4/src/
      SOURCE_VFY=sha1:392b31a9ceefb07caa28d8929a3e602499f1c067
        WEB_SITE=http://www.kde.org/
         ENTERED=20020523
