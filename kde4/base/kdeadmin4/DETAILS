          MODULE=kdeadmin4
           MAJOR=4.6
         VERSION=${MAJOR}.1
          SOURCE=kdeadmin-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/kdeadmin-$VERSION
      SOURCE_URL=$KDE_URL/stable/$VERSION/src
      SOURCE_VFY=sha1:b8eec397c97c19ea12f969134f8cf56886c03a26
   MODULE_PREFIX=${KDE4_INSTALL_DIR:-/usr}
        WEB_SITE=http://www.kde.org
         ENTERED=20071026
         UPDATED=20110304
           SHORT="kde system administrator"

cat << EOF
The kdeadmin package contains packages that usually only a system
administrator might need:

* doc
    XML based documentation for the programs

* kcron
    Editor for the cron command scheduler.

* kdat
    Tape backup tool.

* kfile-plugins
    Make Konquerer display additional info on about *.dep and *.rpm files.

* ksysv
    An editor for System V startup schemes.

* kuser
    An user manager.

* lilo-config
    A plugin for KControl to manage the Linux boot loader LILO.

* secpolicy
    A program to display PAM security policies.

* ksystemlog
    A system log viewer tool.
EOF
