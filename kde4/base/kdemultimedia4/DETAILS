          MODULE=kdemultimedia4
           MAJOR=4.1
         VERSION=${MAJOR}.2
          SOURCE=kdemultimedia-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/kdemultimedia-$VERSION
      SOURCE_URL=$KDE_URL/stable/$VERSION/src/
