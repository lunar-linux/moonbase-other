depends kde-baseapps

optional_depends "chmlib"      "-DWITH_CHM=ON"         "-DWITH_CHM=OFF"         "to read Microsoft ITSS/CHM files"
optional_depends "djvulibre"   "-DWITH_DjVuLibre=ON"   "-DWITH_DjVuLibre=OFF"   "for distributing documents and images"
optional_depends "ebook-tools" "-DWITH_EPub=ON"        "-DWITH_EPub=OFF"        "for accessing and converting various ebook file formats"
optional_depends "freetype2"   "-DWITH_Freetype=ON"    "-DWITH_Freetype=OFF"    "for freetype2 font support"
optional_depends "libspectre"  "-DWITH_LibSpectre=ON"  "-DWITH_LibSpectre=OFF"  "for rendering Postscript documents"
optional_depends "poppler"     "-DWITH_Poppler=ON"     "-DWITH_Poppler=OFF"     "for additional PDF rendering support"
optional_depends "qca2"        "-DWITH_QCA2=ON"        "-DWITH_QCA2=OFF"        "for cross-platform crypto API support"
optional_depends "qimageblitz" "-DWITH_QImageBlitz=ON" "-DWITH_QImageBlitz=OFF" "for graphical effect and filter library support"
optional_depends "tiff"        "-DWITH_TIFF=ON"        "-DWITH_TIFF=OFF"        "for tiff graphics support"
optional_depends "zlib"        "-DWITH_ZLIB=ON"        "-DWITH_ZLIB=OFF"        "for lossless data compression support"
