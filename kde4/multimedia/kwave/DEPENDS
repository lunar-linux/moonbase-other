depends  kdelibs
depends  cmake
depends  fftw3
depends  audiofile

optional_depends phonon        "-DWITH_PHONON=ON"     "-DWITH_PHONON=OFF"     "for the phonon API support"
optional_depends pulseaudio    "-DWITH_PULSEAUDIO=ON" "-DWITH_PULSEAUDIO=OFF" "for pulseaudio support"
optional_depends flac          "-DWITH_FLAC=ON"       "-DWITH_FLAC=OFF"       "for flac audio support"
optional_depends libsamplerate "-DWITH_SAMPLERATE=ON" "-DWITH_SAMPLERATE=OFF" "for libsamplerate support"
optional_depends libvorbis     "-DWITH_OGG=ON"        "-DWITH_OGG=OFF"        "for vorbis audio support"
optional_depends libmad        "-DWITH_MP3=ON"        "-DWITH_MP3=OFF"        "for mp3 support"
