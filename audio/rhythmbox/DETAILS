           MODULE=rhythmbox
         VERSION=0.3.0
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=http://www.rhythmbox.org/download/$SOURCE
        WEB_SITE=http://www.rhythmbox.org
         ENTERED=20020730
