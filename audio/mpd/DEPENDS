depends  zlib

optional_depends  "alsa-lib"   "--enable-alsa"           "--disable-alsa"          "to enable ALSA output"
optional_depends  "pulseaudio" "--enable-pulse"          "--disable-pulse"         "to enable PulseAudio output"
optional_depends  "jack"       "--enable-jack"           "--disable-jack"          "to enable JACK output"
optional_depends  "libao"      "--enable-ao"             "--disable-ao"            "to enable AO output"

optional_depends  "mpg123"     "--enable-mpg123"         "--disable-mpg123"     "to enable mpg123 decoder support"
optional_depends  "libvorbis"  "--enable-vorbis --enable-vorbis-encoder"  "--disable-vorbis --disable-vorbis-encoder"     "to enable vorbis codec support"
optional_depends  "opus"       "--enable-opus"           "--disable-opus"       "to enable Opus codec support"
optional_depends  "flac"       "--enable-flac"           "--disable-flac"       "to enable FLAC input support"
optional_depends  "faad"       "--enable-aac"            "--disable-aac"        "to enable AAC input support"

optional_depends  "audiofile"  "--enable-audiofile"      "--disable-audiofile"  "to enable WAVE/AIFF and AU input support"
optional_depends  "libsndfile" "--enable-sndfile"        "--disable-sndfile"    "to enable sndfile input support"
optional_depends  "libmikmod"  "--enable-mikmod"         "--disable-mikmod"     "to enable MOD input support"
optional_depends  "libmad"     "--enable-mad"            "--disable-mad"        "to enable MAD input support"
optional_depends  "ffmpeg"     "--enable-ffmpeg"         "--disable-ffmpeg"     "to enable support for multiple other input codecs"
optional_depends  "wildmidi"   "--enable-wildmidi"       "--disable-wildmidi"   "to enable midi input support"
optional_depends  "curl"       "--enable-curl"           "--disable-curl"       "to play HTTP streams"
optional_depends  "libmms"     "--enable-mms"            "--disable-mms"        "to enable MMS protocol support"
optional_depends  "libcdio-paranoia" "--enable-cdio-paranoia"  "--disable-cdio-paranoia" "to enable audio CD support"

optional_depends  "libid3tag"  "--enable-id3"            "--disable-id3"           "to enable support for ID3 tags"
optional_depends  "libsamplerate" "--enable-lsr"         "--disable-lsr"           "to support advanced sample rate conversions"
optional_depends  "sqlite"     "--enable-sqlite"         "--disable-sqlite"        "to enable the sticker database"
optional_depends  "avahi"      "--with-zeroconf=avahi"   "--with-zeroconf=no"      "to enable ZeroConf support"
