depends libogg
depends libvorbis
depends SDL2

optional_depends flac \
                 "-DSDLSOUND_DECODER_FLAC=TRUE"  \
                 "-DSDLSOUND_DECODER_FLAC=FALSE"  \
                 "for FLAC support"

optional_depends libmodplug \
                 "-DSDLSOUND_DECODER_MODPLUG=TRUE"  \
                 "-DSDLSOUND_DECODER_MODPLUG=FALSE"  \
                 "for modplug support"

