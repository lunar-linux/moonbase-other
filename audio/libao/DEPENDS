depends %PKGCONF

optional_depends alsa-lib \
                 "--enable-alsa" \
                 "--disable-alsa" \
                 "for Advanced Linux Sound Architecture support"

optional_depends pulseaudio \
                 "--enable-pulse" \
                 "--disable-pulse" \
                 "for pulseaudio support"

optional_depends nas \
                 "--enable-nas" \
                 "--disable-nas" \
                 "for Network Audio System support"
