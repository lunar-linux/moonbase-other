depends gstreamer
depends graphene
depends liboil
depends meson

optional_depends iso-codes  "-D iso-codes=enabled"  "-D iso-codes=disabled"  "for iso-code support"
optional_depends pango      "-D pango=enabled"      "-D pango=disabled"      "for Pango font rendering support"
optional_depends alsa-lib   "-D alsa=enabled"       "-D alsa=disabled"       "for ALSA output support"
optional_depends libogg     "-D ogg=enabled"        "-D ogg=disabled"        "for OGG support"
optional_depends libvorbis  "-D vorbis=enabled"     "-D vorbis=disabled"     "for Vorbis audio codec support"
optional_depends libtheora  "-D theora=enabled"     "-D theora=disabled"     "for Theora video codec support"
optional_depends cdparanoia "-D cdparanoia=enabled" "-D cdparanoia=disabled" "for CDDA support"
optional_depends libvisual  "-D libvisual=enabled"  "-D libvisual=disabled"  "for visualization support"
optional_depends libX11     "-D x11=enabled"        "-D x11=disabled"        "for X plugin support"
optional_depends libXv      "-D xvideo=enabled"     "-D xvideo=disabled"     "for the X11 XVideo extensions"
optional_depends opus       "-D opus=enabled"       "-D opus=disabled"       "for interactive speech on internet support"
optional_depends orc        "-D orc=enabled"        "-D orc=disabled"        "for runtime compiler support"

optional_depends gtk-doc \
                 "-D doc=enabled" \
                 "-D doc=disabled" \
                 "for documentation support" \
                 "n"

optional_depends gobject-introspection \
                 "-D introspection=enabled" \
