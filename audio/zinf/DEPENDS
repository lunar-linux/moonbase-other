depends libmusicbrainz &&
depends id3lib         &&
depends gdbm           &&

optional_depends  "gtk+-2" \
                  "" \
                  "" \
                  "to enable a graphical interface" &&

optional_depends  "libvorbis" \
                  "" \
                  "" \
                  "to play oggvorbis files" &&

optional_depends  "esound" \
                  "" \
                  "--disable-esd --disable-esdtest" \
                  "to enable ESD output support" &&

optional_depends  "arts" \
                  "" \
                  "--disable-arts" \
                  "to enable aRTS output support" &&

optional_depends  "alsa-lib" \
                  "" \
                  "--disable-alsa" \
                  "to enable Advanced Linux Sound Architecture (ALSA) output"
