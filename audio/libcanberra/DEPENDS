depends libvorbis
depends GConf

optional_depends "%UDEV"        "--enable-udev"      "--disable-udev"      "for udev support"

optional_depends "alsa-utils"   "--enable-alsa --disable-oss"  \
                                "--enable-oss --disable-alsa"   \
                                "Say yes for alsa support, else no for oss"

optional_depends "gstreamer-10" "--enable-gstreamer" "--disable-gstreamer" "To enable GStreamer support"
optional_depends "gtk+-2"       "--enable-gtk"       "--disable-gtk"       "To enable GTK+ support"
optional_depends "pulseaudio"   "--enable-pulse"     "--disable-pulse"     "To enable PulseAudio support"
optional_depends "links"        "--enable-lynx"      "--disable-lynx"      "for documentation generation"
