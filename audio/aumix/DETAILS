           MODULE=aumix
         VERSION=2.7
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=http://www.jpj.net/~trevor/$MODULE/$SOURCE
        WEB_SITE=http://jpj.net/~trevor/aumix.html
