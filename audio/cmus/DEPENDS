depends ncurses

optional_depends "flac"       "CONFIG_FLAC=y"    "CONFIG_FLAC=n"    "for Free Lossless Audio Codec support (.flac, .fla)"
optional_depends "libmad"     "CONFIG_MAD=y"     "CONFIG_MAD=n"     "for MPEG Audio Decoder support (.mp3, .mp2, streams)"
optional_depends "libmodplug" "CONFIG_MODPLUG=y" "CONFIG_MODPLUG=n" "for libmodplug support (.mod, .x3m, ...)"
optional_depends "libmikmod"  "CONFIG_MIKMOD=y"  "CONFIG_MIKMOD=n"  "for libmikmod support (.mod, .x3m, ...)"
optional_depends "libmpcdec"  "CONFIG_MPC=y"     "CONFIG_MPC=n"     "for libmpcdec support (Musepack .mpc, .mpp, .mp+)"
optional_depends "libvorbis"  "CONFIG_VORBIS=y"  "CONFIG_VORBIS=n"  "for Ogg/Vorbis support (.ogg, application/ogg, audio/x-ogg)"
optional_depends "wavpack"    "CONFIG_WAVPACK=y" "CONFIG_WAVPACK=n" "for WavPack support (.wv, audio/x-wavpack)"
optional_depends "mp4v2"      "CONFIG_MP4=y"     "CONFIG_MP4=n"     "to play .mp4, m4a, m4b, aac"
optional_depends "faad"       "CONFIG_AAC=y"     "CONFIG_AAC=n"     "for AAC support (.aac, audio/aac, audio/aacp)"
optional_depends "ffmpeg"     "CONFIG_FFMPEG=y"  "CONFIG_FFMPEG=n"  "for FFMPEG support (.shn, .wma)"

optional_depends "pulseaudio" "CONFIG_PULSE=y"   "CONFIG_PULSE=n"   "for PulseAudio output support"
optional_depends "alsa-lib"   "CONFIG_ALSA=y"    "CONFIG_ALSA=n"    "for ALSA output support"
optional_depends "libao"      "CONFIG_AO=y"      "CONFIG_AO=n"      "for libao output support"
