depends Linux-PAM
depends poppler
depends glu
depends pango
depends libinput
depends libxkbcommon
depends wayland-protocols

optional_depends colord \
                 "-D color-management-colord=true" \
                 "-D color-management-colord=false" \
                 "for colord support"

optional_depends lcms2 \
                 "-D color-management-lcms=true" \
                 "-D color-management-lcms=false" \
                 "for lcms support"

optional_depends %JPEG \
                 "-D image-jpeg=true" \
                 "-D image-jpeg=false" \
                 "for JPEG support"

optional_depends libwebp \
                 "-D image-webp=true" \
                 "-D image-webp=false" \
                 "for WebP support"

optional_depends systemd \
                 "-D systemd=true -D launcher-logind=true" \
                 "-D systemd=false -D launcher-logind=false" \
                 "for systemd support"
