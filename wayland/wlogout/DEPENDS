depends gtk-layer-shell
depends meson

optional_depends swaylock "" "" "for default buttons"
optional_depends systemd   "" "" "for systemd support"

optional_depends bash-completion \
                 "-Dbash-completions=true" \
                 "-Dbash-completions=false" \
                 "for bash completion support"

optional_depends zsh \
                 "-Dzsh-completions=true" \
                 "-Dzsh-completions=false" \
                 "for zsh completion support"

optional_depends fish \
                 "-Dfish-completions=true" \
                 "-Dfish-completions=false" \
                 "for fish completion support"

optional_depends scdoc \
                 "-Dman-pages=enabled" \
                 "-Dman-pages=disabled" \
                 "for man pages install" \
                 "n"
