          MODULE=xfce4-clipman-plugin
           MAJOR=1.1
         VERSION=$MAJOR.3
          SOURCE=$MODULE-$VERSION.tar.bz2
      SOURCE_URL=http://archive.xfce.org/src/panel-plugins/$MODULE/$MAJOR
