          MODULE=xfce-utils
         VERSION="git-`date +%Y%U`"
          SOURCE=$MODULE.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE
      SOURCE_URL=git+http://git.xfce.org/xfce/$MODULE:$MODULE
   MODULE_PREFIX=${XFCE4_PREFIX:-/usr}
        WEB_SITE=http://www.xfce.org
         ENTERED=20030715
         UPDATED=20071207
           SHORT="Essential utilities for Xfce4"

cat << EOF
xfce-utils -- Several essential utilities and scripts for XFce 4. Provides a
askbar, the about dialog, the run dialog, the user guide and several useful
scripts that are used by other Xfce4 components.
