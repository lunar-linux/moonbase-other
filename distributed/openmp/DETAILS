          MODULE=openmp
         VERSION=8.0.1
          SOURCE=$MODULE-$VERSION.src.tar.xz
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/$MODULE-$VERSION.src
      SOURCE_URL=https://github.com/llvm/llvm-project/releases/download/llvmorg-$VERSION/
