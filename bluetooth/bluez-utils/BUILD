(  
   ./configure  --prefix=/usr                              \
                --sysconfdir=/etc                          \
                --mandir=/usr/man                          \
                --localstatedir=/var                       \
                --sbindir=/sbin                            \
                --datadir=/usr/share                       \
                $OPTS                                      &&

    default_make                                           
                

) > $C_FIFO 2>&1
