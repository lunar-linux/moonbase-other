                  "for MP3 tag support"

optional_depends  "libvorbis"  "--enable-ogg"   "--disable-ogg"   \
                  "for OGG audio support (must say 'y' to sox)"

optional_depends  "sox"  ""  ""  "required for MP3 or OGG support"
optional_depends  "dvd+rw-tools"  ""  ""  "for DVD burning support"
