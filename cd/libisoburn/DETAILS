          MODULE=libisoburn
         VERSION=0.4.0
          SOURCE=$MODULE-$VERSION.pl01.tar.gz
      SOURCE_URL=http://files.libburnia-project.org/releases
      SOURCE_VFY=sha1:e795a9b2bec9d08efa36c83e3422f8c8312fb0e2
