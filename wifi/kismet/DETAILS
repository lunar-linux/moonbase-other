      SOURCE_URL=http://www.kismetwireless.net/code/
      SOURCE_VFY=sha1:e5f9f51762e98c457c2ecdd8b04ac19f30105435
        WEB_SITE=http://www.kismetwireless.net/
         ENTERED=20040207
