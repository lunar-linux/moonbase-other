      SOURCE_URL=https://www.kismetwireless.net/code/
      SOURCE_VFY=sha256:f08548e26ca65fa1e567b1debbea1ca4d0e7206bddb96a4f639c90171873e8f7
        WEB_SITE=https://www.kismetwireless.net/
         ENTERED=20040207
