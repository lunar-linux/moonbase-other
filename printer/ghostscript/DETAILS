          MODULE=ghostscript
         VERSION=8.54
          SOURCE=$MODULE-$VERSION-gpl.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION-gpl
      SOURCE_URL=$SFORGE_URL/$MODULE/
      SOURCE_VFY=sha1:5da69b04ddc8a4660a2c40b0e561a358c737c310
