depends   chkconfig &&

optional_depends  "espgs" \
		  "" \
		  "" \
		  "for most required printer drivers" &&

optional_depends  "hplip" \
		  "" \
		  "" \
		  "for HP printer/fax/copier driver integration" &&

optional_depends  "Linux-PAM" \
		  "--enable-pam" \
		  "--disable-pam" \
		  "for pluggable authentication" &&

optional_depends  "openssl" \
		  "--enable-ssl --enable-openssl" \
		  "--disable-openssl" \
		  "for encrypted communications" &&

optional_depends  "gnutls" \
		  "--enable-gnutls" \
		  "--disable-gnutls" \
		  "for encrypted communications" &&

optional_depends  "openldap" \
		  "--enable-ldap" \
		  "--disable-ldap" \
		  "for LDAP printer sharing support" &&

optional_depends  "dbus" \
		  "--enable-dbus" \
		  "--disable-dbus" \
		  "enable DBUS support"
