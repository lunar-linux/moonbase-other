depends keyutils

optional_depends krb5 "" "" "for Kerberos support"

optional_depends Linux-PAM "--enable-pam"         "--disable-pam"       "for PAM support"
optional_depends libcap    "--with-libcap"        "--without-libcap"    "for libcap support"
optional_depends libcap-ng "--with-libcap-ng=yes" "--without-libcap-ng" "for libcap-ng support"
optional_depends systemd   "--enable-systemd"     "--disable-systemd"   "for systemd support"
