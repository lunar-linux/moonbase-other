          MODULE=udev
         VERSION=054
          SOURCE=$MODULE-$VERSION.tar.bz2
         SOURCE2=scsi-devfs.sh.patch
      SOURCE_URL=http://www.kernel.org/pub/linux/utils/kernel/hotplug/
     SOURCE2_URL=$PATCH_URL/
