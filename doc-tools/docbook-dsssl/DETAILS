SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=$SFORGE_URL/docbook/$SOURCE
        WEB_SITE=http://docbook.sourceforge.net/projects/dsssl/
