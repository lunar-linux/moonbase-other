          MODULE=libglade
         VERSION=0.17
          SOURCE=$MODULE-$VERSION.tar.gz
   SOURCE_URL[0]=$GNOME_URL/sources/$MODULE/$VERSION/
   SOURCE_URL[1]=ftp://ftp.gnome.org/pub/GNOME/sources/$MODULE/$VERSION/
        WEB_SITE=http://www.gnome.org
         ENTERED=20010922
         UPDATED=20010922
           SHORT="library for loading glade interface files at runtime."
cat << EOF
libglade
This library allows you to load glade interface files in a program at
runtime.  It doesn't require GLADE to be used, but GLADE is by far the
easiest way to create the interface files.
EOF
