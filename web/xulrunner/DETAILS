          MODULE=xulrunner
         VERSION=1.9.0.3
          SOURCE=$MODULE-$VERSION-source.tar.bz2
         SOURCE2=$MODULE-$VERSION-patches.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/mozilla
