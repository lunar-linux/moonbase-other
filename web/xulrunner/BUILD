
  export MOZ_OBJDIR="${SOURCE_DIRECTORY}/build-mozilla"  &&
  mkdir -p ${MOZ_OBJDIR}  &&

  OPTS+=" --enable-application=xulrunner \
          --prefix=/usr \
          --libdir=/usr/lib \
          --with-system-jpeg \
          --with-system-zlib \
          --with-system-bz2 \
          --enable-system-sqlite \
          --enable-system-cairo \
          --with-pthreads \
          --enable-strip \
          --disable-tests \
          --disable-mochitest \
          --disable-installer \
          --disable-debug \
          --enable-default-toolkit=cairo-gtk2 \
          --enable-pango \
          --enable-svg \
          --enable-canvas \
          --disable-javaxpcom \
          --disable-crashreporter \
          --enable-safe-browsing \
          --enable-optimize \
          --disable-necko-wifi \
          --enable-startup-notification" &&

  export MOZ_CO_PROJECT=xulrunner &&
  export MOZILLA_OFFICIAL=1 &&
  export BUILD_OFFICIAL=1 &&
  export FREEBL_NO_DEPEND=0 &&

  cd ${MOZ_OBJDIR}  &&
  ../configure $OPTS &&
  default_make
