                  "--with-libtiff"        \
                  "--without-libtiff"     \
                  "for console graphics support"
                  
optional_depends  jpeg                    \
                  "--with-libjpeg"        \
                  "--without-libjpeg"     \
                  "for console graphics support"

optional_depends  "openssl"               \
                  "--with-ssl"            \
                  "--without-ssl"         \
                  "encryption for HTTPS"

optional_depends  "svgalib"               \
                  "--with-svgalib"        \
                  "--without-svgalib"     \
                  "for console graphics support"

