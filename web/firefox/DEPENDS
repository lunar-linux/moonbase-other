depends freetype2
depends graphite
depends harfbuzz
depends autoconf-mozilla
depends unzip
depends gtk+-3
depends nss
depends curl
depends alsa-lib
depends libvpx
depends cbindgen
depends python

optional_depends GConf \
                 "--enable-gconf" \
                 "--disable-gconf" \
                 "GConf support"

optional_depends libpng \
                 "--with-system-png" \
                 "--without-system-libpng" \
                 "Build with system libpng"

