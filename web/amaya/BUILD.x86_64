(

  cp -f  Mesa/configs/linux Mesa/configs/current &&

  ARCH_FLAGS="-m32 -DGLX_USE_TLS" &&

# Removing a redundant wxfile.
  sedit "s|wxFile::wxFile|wxFile|g" Amaya/thotlib/base/platform.c Amaya/amaya/HTMLedit.c &&

  patch_it $SOURCE_CACHE/$SOURCE2 0 &&

  cd     Amaya                 &&
  mkdir  LINUX-ELF             &&
  cd     LINUX-ELF             &&

  ../configure  --prefix=$MODULE_PREFIX   \
                         $OPTS           &&

  default_make &&


  # Desktop menu entry
  cat > ${MODULE}.desktop << EOF  &&
[Desktop Entry]
Type=Application
Name=Amaya
Comment=Amaya is a Web editor
Exec=$MODULE_PREFIX/bin/amaya
Icon=$MODULE_PREFIX/Amaya/amaya/amaya.png
Categories=Development;
EOF

  install -D -m644 ${MODULE}.desktop /usr/share/applications/${MODULE}.desktop

) > $C_FIFO 2>&1
