depends  pcre
depends  apr-util

optional_depends  "%OSSL"         \
                  "--with-ssl"    \
                  "--without-ssl" \
                  "for TSL/SSL support"

optional_depends  "db"                     \
                  "--with-berkeley-db"     \
                  "--without-berkeley-db"  \
                  "for Berkely db support"

optional_depends  "gdbm"            \
                  "--with-gdbm"     \
                  "--without-gdbm"  \
                  "for gdbm support"

optional_depends  "libxml2"        \
                  "--with-xlm2"    \
                  "--without-xml2" \
                  "for mod_proxy_html, mod_xml2enc modules"
