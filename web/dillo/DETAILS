          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=http://dillo.cipsga.org.br/download/$SOURCE
        WEB_SITE=http://dillo.cipsga.org.br/
