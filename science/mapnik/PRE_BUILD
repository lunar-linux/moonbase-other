default_pre_build &&

cd $SOURCE_DIRECTORY/ &&

sedit "s:call('ldconfig'):pass:" src/build.py &&
sedit '129d' SConstruct &&
sedit 's:from collections import Iterable:from collections.abc import Iterable:' scons/scons-local-3.0.1/SCons/Util.py &&

OPTS+=" PREFIX=/usr \
        XMLPARSER=libxml2 \
        LINKING=shared \
        RUNTIME_LINK=shared \
        INPUT_PLUGINS=all \
        ICU_INCLUDES=/usr/include/unicode \
        ICU_LIBS=/usr/lib \
        PROJ_INCLUDES=/usr/include \
        PROJ_LIBS=/usr/lib \
        SYSTEM_FONTS=/usr/share/fonts \
        CUSTOM_CXXFLAGS=$CXXFLAGS \
        CUSTOM_LDFLAGS=$LDFLAGS \
        CUSTOM_DEFINES=-DACCEPT_USE_OF_DEPRECATED_PROJ_API_H=1 \
        CXXFLAGS=-DU_USING_ICU_NAMESPACE=1 \
        CUSTOM_CFLAGS=$CFLAGS \
        JOBS=${MAKES}"
