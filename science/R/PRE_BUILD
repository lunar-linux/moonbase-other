if  [ -e /usr/bin/g77 ]; then
  default_pre_build
elif
    [ -e /usr/bin/gfortran ]; then
  default_pre_build
else
  sound FAILURE
  message "!!!Problem: Your gcc does not have g77 Fortran enabled, please recompile your gcc first"
  false
fi &&

if [ -e /usr/lib64/R/doc ]; then
  rm -rf /usr/lib64/R/doc
fi
