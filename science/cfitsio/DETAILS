          MODULE=cfitsio
         VERSION=3390
          SOURCE=$MODULE$VERSION.tar.gz
      SOURCE_URL=ftp://heasarc.gsfc.nasa.gov/software/fitsio/c
SOURCE_DIRECTORY=$BUILD_DIRECTORY/cfitsio
