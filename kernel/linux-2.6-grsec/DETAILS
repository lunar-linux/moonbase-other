          MODULE=linux-2.6-grsec
  KERNEL_VERSION=2.6.14
  KERNEL_RELEASE=${KERNEL_VERSION}.3
   GRSEC_VERSION=2.1.7
         VERSION=${KERNEL_RELEASE}-${GRSEC_VERSION}	  
