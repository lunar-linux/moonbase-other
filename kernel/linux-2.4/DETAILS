           MODULE=linux-2.4
          VERSION=2.4.31
         PVERSION=r11.0
           SOURCE=linux-$VERSION.tar.bz2
          SOURCE2=ll-${PVERSION}-1.tar.bz2
 SOURCE_DIRECTORY=/usr/src/linux-$VERSION
    SOURCE_URL[0]=$KERNEL_URL/pub/linux/kernel/v2.4/
    SOURCE_URL[1]=http://www.kernel.org/pub/linux/kernel/v2.4/
      SOURCE2_URL=$PATCH_URL/
       SOURCE_VFY=sha1:36d8c44b9669f253550e98e5d5aad7c7929f3b5f
      SOURCE2_VFY=sha1:11acce49d6d9cf7b8cfbdfded98cbab931a240c1
