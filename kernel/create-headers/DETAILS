            MODULE=create-headers
           VERSION=3.5.7
            SOURCE=linux-$VERSION.tar.bz2
     SOURCE_URL[0]=$KERNEL_URL/pub/linux/kernel/v3.x
     SOURCE_URL[1]=http://www.kernel.org/pub/linux/kernel/v3.x
