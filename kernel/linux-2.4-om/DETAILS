         PVERSION=r16.1
           SOURCE=linux-$VERSION.tar.bz2
          SOURCE2=ll-${PVERSION}-1.tar.bz2
 SOURCE_DIRECTORY=/usr/src/linux-$VERSION-om
    SOURCE_URL[0]=$KERNEL_URL/pub/linux/kernel/v2.4/
    SOURCE_URL[1]=http://www.kernel.org/pub/linux/kernel/v2.4/
      SOURCE2_URL=$PATCH_URL
       SOURCE_VFY=sha1:890575c00678e3d51998d915862439318f74f23c
      SOURCE2_VFY=sha1:55e920b3db167cc2e6b3b52627e8fbb01fffec72
